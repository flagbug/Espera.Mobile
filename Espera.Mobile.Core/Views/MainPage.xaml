<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
				  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				  x:Class="Espera.Mobile.Core.Views.MainPage"
				  xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms">
  <MasterDetailPage.Master>
    <ContentPage Title="Espera">
      <ListView x:Name="NavigationListView" Grid.Row="0" ItemsSource="{Binding NavigationEntries}" SelectedItem="{Binding SelectedEntry}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <ViewCell.View>
                <StackLayout Orientation="Horizontal"
                             IsEnabled="{Binding IsEnabled}"
                             Padding="5, 0, 0, 0">
                  <Image IsVisible="{Binding IsSecondary}"
                         WidthRequest="20" HeightRequest="20"
                         Source="{Binding IconSource}"
                         VerticalOptions="Center" />
                  <Label Text="{Binding Text}"
                         VerticalOptions="Center"
	                       Font="Large" />
                </StackLayout>
              </ViewCell.View>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </ContentPage>
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
    <ContentPage>
    </ContentPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>